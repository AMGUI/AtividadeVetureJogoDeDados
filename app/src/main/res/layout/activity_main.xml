<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="36dp"
        android:text="@string/numero1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imageDado2"
        app:layout_constraintTop_toBottomOf="@+id/imageDado2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="@string/textoButao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="65dp"
        android:text="@string/numero1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageDado1"
        app:layout_constraintTop_toBottomOf="@+id/imageDado1" />

    <ImageView
        android:id="@+id/imageDado1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="73dp"
        android:contentDescription="@string/Imgdado"
        app:layout_constraintEnd_toStartOf="@+id/imageDado2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dado1" />

    <ImageView
        android:id="@+id/imageDado2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="73dp"
        android:contentDescription="@string/Imgdado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageDado1"
        app:layout_constraintTop_toTopOf="@+id/imageDado1"
        app:srcCompat="@drawable/dado1" />

</androidx.constraintlayout.widget.ConstraintLayout>